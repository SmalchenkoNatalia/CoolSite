doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width")
		title Список статей
		link(rel="stylesheet",href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css", integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2", crossorigin="anonymous")
		script(src="https://code.jquery.com/jquery-2.2.4.min.js")
	body
		div(class="card mb-3", style="width: 90%; padding: 2%; margin: 2%; margin-left: auto; margin-right: auto;")
			h2 Список статей
			form(name="articleForm")
				input(type="hidden", name="id", value="0")
				div(class="form-group")
					label(for="name") Назва
					input(class="form-control", name="name", required)
				div(class="form-group")
					label(for="article") Текст статті
					textarea(class="form-control", name="article", rows="7", required)
				div(class="form-group")
					label(for="lang") Мова
					select(class="form-control", id="exampleSelect1", name="lang", required)
						option(selected, disabled) Оберіть мову статті
						option ENG
						option UKR
				div(class="panel-body")
					button(type="submit", class="btn btn-sm btn-primary") Зберегти
					a(id="reset", class="btn btn-sm btn-primary") Скинути
			table(class="table table-condensed table-striped table-bordered")
				thead
					tr
						th Id
						th Назва
						th Мова
						th
				tbody
			
			script(src="../scripts/clientAdminScript.js")
